<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:votevis='urn:import:com.votevis.client.presenter'>

	<ui:style>

		.comment-header {
		font-size: 150%;
		}

		.comment-body {

		}

		.comment-box {
		background-color: #e5ecf9;
		border: 1px solid black;
		}

	</ui:style>
	<g:HTMLPanel>
		<header class='{style.comment-header}'>
			<span ui:field='titleSpan' />
				Comments added to the
			visualisation shown:
		</header>

		<div class='{style.comment-body}' ui:field='bodyDiv'>
			Comments added to the
			visualisation shown:
		</div>

		<div class='{style.comment-body}' ui:field='oldComments'>
			Old Comments...
		</div>

		
		<div>
		<g:Label>Enter your Name:</g:Label>
		<g:TextBox ui:field="author"></g:TextBox>
		</div>
		
		<g:Label>Enter your comment:</g:Label>
		<g:RichTextArea ui:field="textInputField" styleName='{style.comment-box}'></g:RichTextArea>

		<div>
			 <g:Button ui:field='resetComment'>Reset</g:Button>
			 <g:Button ui:field='addComment'>Add Comment</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>