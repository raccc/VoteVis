<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:votevis='urn:import:com.votevis.client.presenter'>

	<ui:style>

		.comment-header {
		font-size: 150%;
		}

		.comment-body {

		}

		.comment-box {
		background-color: #e5ecf9;
		border: 1px solid black;
		}

	</ui:style>
	<g:HTMLPanel>
		<header class='{style.comment-header}'>
			<span ui:field='titleSpan' />
				Comments added to the
			visualisation shown:
		</header>

		<div class='{style.comment-body}' ui:field='bodyDiv'>
			Comments added to the
			visualisation shown:
		</div>

		<div class='{style.comment-body}' ui:field='addedComments'>
			Old Comments...
		</div>

		<g:Label>Enter comment to add to visualisation:</g:Label>
		<g:RichTextArea ui:field="commentText" styleName='{style.comment-box}'></g:RichTextArea>

		<div>
			<button ui:field='resetComment'>
				<ui:msg>Reset</ui:msg>
			</button>
			<button ui:field='addComment'>
				<ui:msg>Add Comment</ui:msg>
			</button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>